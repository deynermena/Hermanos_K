@{
    ViewData["Title"] = "Panel de Administrador";
}

<div class="dashboard-header">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>Panel de Administración</h2>
                <p>Control total del sistema</p>
            </div>
            <div class="col-md-4">
                <div class="dashboard-stats">
                    <div class="row">
                        <div class="col-4">
                            <div class="stat-number">150</div>
                            <div class="stat-label">Usuarios</div>
                        </div>
                        <div class="col-4">
                            <div class="stat-number">45</div>
                            <div class="stat-label">Destinos</div>
                        </div>
                        <div class="col-4">
                            <div class="stat-number">89</div>
                            <div class="stat-label">Reservas</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-users me-2"></i>
                        Usuarios
                    </h5>
                    <p class="card-text">Administra usuarios, roles y permisos del sistema.</p>
                    <a href="#" class="btn btn-primary">
                        <i class="fas fa-user-cog me-2"></i>
                        Gestionar Usuarios
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-map-marked-alt me-2"></i>
                        Destinos
                    </h5>
                    <p class="card-text">Configura rutas, precios y disponibilidad.</p>
                    <a href="#" class="btn btn-success">
                        <i class="fas fa-route me-2"></i>
                        Gestionar Destinos
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-chart-line me-2"></i>
                        Reportes
                    </h5>
                    <p class="card-text">Analiza estadísticas y genera informes.</p>
                    <a href="#" class="btn btn-info">
                        <i class="fas fa-file-alt me-2"></i>
                        Ver Reportes
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-cog me-2"></i>
                        Configuración
                    </h5>
                    <p class="card-text">Ajusta la configuración general del sistema.</p>
                    <a href="#" class="btn btn-secondary">
                        <i class="fas fa-wrench me-2"></i>
                        Configurar
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-bell me-2"></i>
                        Notificaciones
                    </h5>
                    <p class="card-text">Gestiona las notificaciones del sistema.</p>
                    <a href="#" class="btn btn-warning">
                        <i class="fas fa-envelope me-2"></i>
                        Administrar
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-life-ring me-2"></i>
                        Soporte
                    </h5>
                    <p class="card-text">Centro de ayuda y soporte técnico.</p>
                    <a href="#" class="btn btn-danger">
                        <i class="fas fa-headset me-2"></i>
                        Ver Tickets
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
