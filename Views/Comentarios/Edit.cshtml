@model HermanosK.Models.Comentario

<h1>Editar Comentario</h1>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Autor"></label>
        <input asp-for="Autor" class="form-control" />
        <span asp-validation-for="Autor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Texto"></label>
        <textarea asp-for="Texto" class="form-control"></textarea>
        <span asp-validation-for="Texto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estrellas"></label>
        <select asp-for="Estrellas" class="form-control">
            <option value="1" selected="@(Model.Estrellas == 1)">1 estrella</option>
            <option value="2" selected="@(Model.Estrellas == 2)">2 estrellas</option>
            <option value="3" selected="@(Model.Estrellas == 3)">3 estrellas</option>
            <option value="4" selected="@(Model.Estrellas == 4)">4 estrellas</option>
            <option value="5" selected="@(Model.Estrellas == 5)">5 estrellas</option>
        </select>

        <span asp-validation-for="Estrellas" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
