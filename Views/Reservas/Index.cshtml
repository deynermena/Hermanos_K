@model List<ReservasWeb.Models.Reserva>

<!DOCTYPE html>
<html>
<head>
    <title>Reservas Disponibles</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <h1>Reservas Disponibles</h1>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th>Calificación</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reserva in Model)
            {
                <tr>
                    <td>@reserva.Nombre</td>
                    <td>@reserva.Categoria</td>
                    <td>@reserva.Precio.ToString("C")</td>
                    <td>@reserva.Calificacion</td>
                    <td>
                        <img src="@Url.Content("~/Content/Images/" + reserva.Imagen)" alt="@reserva.Nombre" style="width:100px;" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

