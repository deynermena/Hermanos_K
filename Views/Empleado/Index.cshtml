@{
    ViewData["Title"] = "Panel de Empleado";
}

<div class="dashboard-header">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>Panel de Empleado</h2>
                <p>Gestión de reservas y atención al cliente</p>
            </div>
            <div class="col-md-4">
                <div class="dashboard-stats">
                    <div class="row">
                        <div class="col-6">
                            <div class="stat-number">24</div>
                            <div class="stat-label">Reservas Hoy</div>
                        </div>
                        <div class="col-6">
                            <div class="stat-number">5</div>
                            <div class="stat-label">Pendientes</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-clipboard-list me-2"></i>
                        Reservas
                    </h5>
                    <p class="card-text">Gestiona las reservas activas y pendientes.</p>
                    <a href="#" class="btn btn-primary">
                        <i class="fas fa-tasks me-2"></i>
                        Ver Reservas
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-users me-2"></i>
                        Clientes
                    </h5>
                    <p class="card-text">Gestiona la información y solicitudes de clientes.</p>
                    <a href="#" class="btn btn-success">
                        <i class="fas fa-user-check me-2"></i>
                        Atender Clientes
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Horarios
                    </h5>
                    <p class="card-text">Consulta los horarios y disponibilidad.</p>
                    <a href="#" class="btn btn-info">
                        <i class="fas fa-clock me-2"></i>
                        Ver Horarios
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-headset me-2"></i>
                        Soporte
                    </h5>
                    <p class="card-text">Atiende las consultas y problemas de los clientes.</p>
                    <a href="#" class="btn btn-warning">
                        <i class="fas fa-comments me-2"></i>
                        Ver Tickets
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-ship me-2"></i>
                        Estado de Viajes
                    </h5>
                    <p class="card-text">Monitorea el estado de los viajes en curso.</p>
                    <a href="#" class="btn btn-secondary">
                        <i class="fas fa-binoculars me-2"></i>
                        Monitorear
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
